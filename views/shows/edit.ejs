<% layout("layouts/boilerplate") %>

<body class="bg-light">

<div class="container mt-5 mb-5 d-flex justify-content-center">

    <div class="card shadow-lg p-4 border-0"
         style="max-width: 750px; width: 100%; border-radius: 15px;">

        <h3 class="mb-4 text-center fw-semibold">
            Edit Restaurant
        </h3>


        <form method="POST" 
              action="/show/<%= rest._id %>?_method=PUT"
              enctype="multipart/form-data">

            <!-- Name -->
            <div class="mb-3">
                <label class="form-label">Restaurant Name</label>
                <input type="text"
                       name="name"
                       value="<%= rest.name %>"
                       class="form-control shadow-sm"
                       required>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description"
                          class="form-control shadow-sm"
                          rows="3"
                          required><%= rest.description %></textarea>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input type="number"
                       name="price"
                       value="<%= rest.price %>"
                       class="form-control shadow-sm"
                       required>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label class="form-label">Category</label>
                <input type="text"
                       name="category"
                       value="<%= rest.category %>"
                       class="form-control shadow-sm">
            </div>

            <!-- IMAGE SECTION -->
            <div class="mb-4">

                <label class="form-label fw-bold">Images</label>

               <!-- Image Container -->
                <div id="imageContainer">

                    <% rest.images.forEach((img) => { %>

                        <div class="image-box mb-3 border rounded p-2 d-flex align-items-center">

                            <!-- Preview -->
                            <img src="<%= img.url %>"
                                 width="80"
                                 class="me-3 rounded shadow-sm">

                            <!-- File Input -->
                            <input type="file"
                                   name="itemImages"
                                   class="form-control form-control-sm me-2 shadow-sm">

                            <!-- Hidden existing image -->
                            <input type="hidden"
                                   name="existingImages"
                                   value="<%= img.filename %>">

                            <!-- Remove Button -->
                            <button type="button"
                                    class="btn btn-sm btn-danger"
                                    onclick="removeImage(this)">
                                ✖
                            </button>

                        </div>

                    <% }) %>

                </div>
                 <!-- Add Button -->
                <div class="mb-2">
                    <button type="button"
                            class="btn btn-sm btn-primary"
                            onclick="addImageInput()">
                        ➕ Add Image
                    </button>
                </div>

            </div>

            <!-- Submit -->
            <div class="text-center">
                <button type="submit"
                        class="btn btn-success px-4 shadow-sm">
                    Update Restaurant
                </button>
            </div>

        </form>

    </div>

</div>

<!-- JS -->
<script>

function addImageInput() {

    let container = document.getElementById("imageContainer");

    let div = document.createElement("div");
    div.className = "image-box mb-3 border rounded p-2 d-flex align-items-center";

    div.innerHTML = `
        <input type="file"
               name="itemImages"
               class="form-control form-control-sm me-2 shadow-sm">

        <button type="button"
                class="btn btn-sm btn-danger"
                onclick="removeImage(this)">
            ✖
        </button>
    `;

    container.appendChild(div);
}

function removeImage(button) {
    button.parentElement.remove();
}

</script>

</body>
</html>
