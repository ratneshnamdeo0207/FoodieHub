<% layout('layouts/boilerplate') %>
<body>
  <!-- ‚úÖ Hero Section -->
<section class="hero">
    <div class="hero-overlay">
        <h1 class="display-4 fw-bold">Discover the Best Restaurants Near You</h1>
        <p class="lead">Find, Review & Share your favorite places</p>
        <a href="/resturants" class="btn btn-warning btn-lg mt-3">Explore Now</a>
    </div>
    
</section>


<section class="container my-5">
    <h2 class="text-center mb-4">Browse by Categories</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-3">
            
            <div class="card category-card p-3 shadow-sm">
                <a style="text-decoration: none; color: brown;" href="/filter?Category=North+Indian&rating=0"><h5>North Indian</h5></a>
            </div>
        
        </div>
            <div class="col-md-3 mb-3">
            
             <div class="card category-card p-3 shadow-sm">
                <a style="text-decoration: none; color: brown;" href="/filter?Category=South+Indian&rating=0"><h5>South Indian</h5></a>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card category-card p-3 shadow-sm">
                <a style="text-decoration: none; color: brown;" href="/filter?Category=Chinese&rating=0"><h5>Cafe</h5></a>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card category-card p-3 shadow-sm">
                 <a style="text-decoration: none; color: brown;" href="/filter?Category=Fast+Food&rating=0"><h5>Indian</h5></a>
            </div>
        </div>
    </div>
</section>


<section class="container my-5">
    <h2 class="text-center mb-4">Featured Restaurants</h2>
    <div class="row">
        <% let x = 0; %>
        <% for( let resturant of resturants ) { 
            
            if(x == 3)
        {
            break;
        }
        x++;
            %>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img src="<%= resturant.images[0].url %>" class="card-img-top" height="200">
                <div class="card-body">
                    <h5 class="card-title"><%= resturant.name %></h5>
                    <p class="card-text"><%= resturant.location %></p>
                    <a href="/show/<%= resturant.id %>" class="btn btn-warning">View Resturant</a>
                </div>
            </div>
        </div>
        <% } %>
        


    </div>
</section>


<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Why Choose FoodieHub?</h2>
        <div class="row">
            <div class="col-md-4">
                <h5>‚≠ê Verified Reviews</h5>
                <p>Real reviews from real customers.</p>
            </div>
            <div class="col-md-4">
                <h5>üìç Easy Search</h5>
                <p>Find restaurants by location & category.</p>
            </div>
            <div class="col-md-4">
                <h5>üìù Add Your Place</h5>
                <p>List your restaurant easily.</p>
            </div>
        </div>
    </div>
</section>


    
</body>
