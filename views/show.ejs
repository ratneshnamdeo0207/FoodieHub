<% layout("layouts/boilerplate") %>

<div class="container my-5">

    
<!-- ‚úÖ Main Section -->
<div class="container my-5">

    <div class="row">

        <!-- Image -->
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1555992336-03a23c9b6c9c"
 
            class="restaurant-img shadow">
        </div>

        <!-- Details -->
        <div class="col-md-6">

            <h2 class="fw-bold"><%= rest.name %> </h2>

            <p class="text-muted">üìç <%= rest.location %> </p>

            <h5 class="text-warning">‚≠ê 4.5 / 5</h5>

            <p class="mt-3">
                <%= rest.description %>
            </p>

            <p><strong>Category:</strong> <%= rest.Category %> </p>
            <p><strong>Price Range:</strong> &#8377;<%= rest.startingPrice %> - &#8377;<%= rest.endingPrice %></p>
            <p><strong>Timings:</strong> <%= rest.openingHour %> ‚Äì <%= rest.closingHour %></p>

            <div class="mt-4">
                <button class="btn btn-outline-warning me-2">Edit</button>
                <button class="btn btn-danger">Delete</button>
            </div>

        </div>

    </div>

    <hr class="my-5">

    <!-- ‚úÖ Reviews Section -->
    <h4 class="mb-4">Customer Reviews</h4>

    <div class="row">

        <div class="col-md-4 mb-3">
            <div class="card review-card shadow-sm p-3">
                <h6 class="text-warning">‚≠ê 5</h6>
                <p>Amazing food and great ambiance. Highly recommended!</p>
                <small class="text-muted">- Rahul</small>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card review-card shadow-sm p-3">
                <h6 class="text-warning">‚≠ê 4</h6>
                <p>Good service and tasty food. Will visit again.</p>
                <small class="text-muted">- Priya</small>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card review-card shadow-sm p-3">
                <h6 class="text-warning">‚≠ê 4.5</h6>
                <p>Nice atmosphere and delicious biryani.</p>
                <small class="text-muted">- Amit</small>
            </div>
        </div>

    </div>

</div>

</div>
