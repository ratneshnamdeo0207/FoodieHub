<% layout("layouts/boilerplate") %>

<body class="bg-light">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <h2 class="text-center mb-4 fw-bold text-primary">
                        Create Your FoodieHub Account üçî
                    </h2>

                    <form action="/signup" method="POST" 
                          enctype="multipart/form-data"
                          class="needs-validation" novalidate>

                        <div class="row">

                            <!-- Username -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Username</label>
                                <input type="text" class="form-control" 
                                       name="user[username]" required>
                                <div class="invalid-feedback">
                                    Please enter a username.
                                </div>
                            </div>

                            <!-- Full Name -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Full Name</label>
                                <input type="text" class="form-control" 
                                       name="user[fullName]" required>
                                <div class="invalid-feedback">
                                    Please enter your full name.
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" 
                                       name="user[email]" required>
                                <div class="invalid-feedback">
                                    Enter a valid email.
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" 
                                       name="user[phone]" pattern="[0-9]{10}" required>
                                <div class="invalid-feedback">
                                    Enter a valid 10-digit phone number.
                                </div>
                            </div>

                            


                            <!-- Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" 
                                       name="user[password]" id="password"
                                       minlength="6" required>
                                <div class="invalid-feedback">
                                    Minimum 6 characters required.
                                </div>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" 
                                       id="confirmPassword" required>
                                <div class="invalid-feedback">
                                    Passwords must match.
                                </div>
                            </div>
                            <!-- Role -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Account Type</label>
                                <select class="form-select" name="user[role]" required>
                                    <option value="" selected disabled>Select Role</option>
                                    <option value="user">Customer</option>
                                    <option value="owner">Restaurant Owner</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select an account type.
                                </div>
                            </div>

                            <!-- Profile Image -->
                                                       <div class="col-md-6 mb-3">

                                <label class="form-label">Profile Image</label>
                                <input type="file" class="form-control" 
                                       name="profileImage"
                                       accept="image/*" required>
                                <div class="invalid-feedback">
                                    Please upload a profile image.
                                </div>
                            </div>

                        </div>

                        <!-- Addresses Section -->
                        <hr class="mb-4">

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="fw-bold mb-0">Addresses</h5>
                            <button type="button" 
                                    class="btn btn-outline-primary btn-sm"
                                    onclick="addAddress()">
                                + Add Address
                            </button>
                        </div>

                        <div id="addressContainer">

                            <!-- Default Address -->
                            <div class="card mb-3 shadow-sm address-block">
                                <div class="card-body">

                                    <div class="mb-2">
                                        <input type="text" class="form-control mb-2" 
                                               name="addresses[0][houseNo]" 
                                               placeholder="House No" required>

                                        <input type="text" class="form-control mb-2" 
                                               name="addresses[0][street]" 
                                               placeholder="Street" required>

                                        <div class="row">
                                            <div class="col-md-4 mb-2">
                                                <input type="text" class="form-control" 
                                                       name="addresses[0][city]" 
                                                       placeholder="City" required>
                                            </div>
                                            <div class="col-md-4 mb-2">
                                                <input type="text" class="form-control" 
                                                       name="addresses[0][state]" 
                                                       placeholder="State" required>
                                            </div>
                                            <div class="col-md-4 mb-2">
                                                <input type="number" class="form-control" 
                                                       name="addresses[0][pincode]" 
                                                       placeholder="Pincode" required>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <!-- Hidden Role -->
                        <input type="hidden" name="role" value="user">

                        <!-- Submit -->
                        <div class="d-grid mt-4">
                            <button class="btn btn-primary btn-lg">
                                Sign Up
                            </button>
                        </div>

                        <p class="text-center mt-3">
                            Already have an account?
                            <a href="/login">Login</a>
                        </p>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


<!-- Bootstrap Validation + Dynamic Address Script -->
<script>

let addressIndex = 1;

function addAddress() {

    const container = document.getElementById("addressContainer");

    const addressHTML = `
        <div class="card mb-3 shadow-sm address-block">
            <div class="card-body position-relative">

                <button type="button"
                        class="btn-close position-absolute top-0 end-0 m-3"
                        onclick="removeAddress(this)">
                </button>

                <div class="form-check mb-3">
                    <input class="form-check-input"
                           type="radio"
                           name="defaultAddress"
                           value="${addressIndex}">
                    <label class="form-check-label fw-semibold">
                        Set as Default Address
                    </label>
                </div>

                <input type="text" class="form-control mb-2" 
                       name="addresses[${addressIndex}][houseNo]" 
                       placeholder="House No" required>

                <input type="text" class="form-control mb-2" 
                       name="addresses[${addressIndex}][street]" 
                       placeholder="Street" required>

                <div class="row">
                    <div class="col-md-4 mb-2">
                        <input type="text" class="form-control" 
                               name="addresses[${addressIndex}][city]" 
                               placeholder="City" required>
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="text" class="form-control" 
                               name="addresses[${addressIndex}][state]" 
                               placeholder="State" required>
                    </div>
                    <div class="col-md-4 mb-2">
                        <input type="number" class="form-control" 
                               name="addresses[${addressIndex}][pincode]" 
                               placeholder="Pincode" required>
                    </div>
                </div>

            </div>
        </div>
    `;

    container.insertAdjacentHTML("beforeend", addressHTML);
    addressIndex++;
}

function removeAddress(button) {
    const block = button.closest(".address-block");
    const radio = block.querySelector("input[type='radio']");
    
    // If removing default address, select first one
    if (radio.checked) {
        const firstRadio = document.querySelector("input[name='defaultAddress']");
        if (firstRadio) firstRadio.checked = true;
    }

    block.remove();
}

</script>


</body>
